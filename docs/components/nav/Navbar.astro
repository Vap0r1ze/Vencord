---
import { Icon } from "astro-icon";
import { mediaMobile } from "../../lib/responsive/breakpoint";
import SectionsToggle from "./SectionsToggle.svelte";
---

<div class="navbar">
    <img
        class="logo"
        src="https://media.discordapp.net/stickers/1026517526106087454.webp?size=32"
        width="32"
        height="32"
    />
    <span class="brand">Vendocs</span>
    <div class="spacer"></div>
    <div class="sections-toggle">
        <SectionsToggle client:media={mediaMobile}>
            <Icon pack="mdi" name="menu" />
        </SectionsToggle>
    </div>
</div>

<style lang="scss">
    @use "../../assets/responsive";

    .navbar {
        background: var(--catppuccin-mantle);
        display: flex;
        height: 100%;
        align-items: center;
        box-sizing: border-box;
        padding: 0 24px;
    }
    .logo {
        border-radius: 50%;
        margin-right: 12px;
    }
    .brand {
        color: var(--catppuccin-subtext0);
        letter-spacing: 2px;
        font-family: var(--font-code);
        font-size: 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
    }
    .spacer {
        flex: 1;
    }
    @include responsive.desktop {
        .sections-toggle {
            display: none;
        }
    }
</style>
